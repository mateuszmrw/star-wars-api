{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@db/(.*)$": [
      "<rootDir>/../src/prisma/$1"
    ],
    "^@domain/(.*)$": [
      "<rootDir>/../src/domain/$1"
    ],
    "^@dto/(.*)$": [
      "<rootDir>/../src/common/dto/$1"
    ],
    "^@pipe/(.*)$": [
      "<rootDir>/../src/common/pipes/$1"
    ],
    "^@factories/(.*)$": [
      "<rootDir>/factories/$1"
    ]
  }
}
